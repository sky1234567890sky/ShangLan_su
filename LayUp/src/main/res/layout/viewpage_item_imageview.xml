<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rlt"
    android:background="@color/c_000"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/return_webview"
        android:src="@mipmap/fanhuiyemian"
        android:padding="@dimen/dp_20"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="详情"
        android:textColor="@color/c_fff"
        android:layout_toRightOf="@id/return_webview"
        android:textStyle="italic"
        android:textSize="@dimen/sp_18"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/last_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_red"
        android:text="上一个"
        android:textColor="@color/c_fff"
        android:layout_margin="@dimen/dp_20"
        android:padding="@dimen/dp_10"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/save_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_red"
        android:text="保存到本地"
        android:textColor="@color/c_fff"
        android:layout_margin="@dimen/dp_20"
        android:padding="@dimen/dp_10"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:layout_alignParentBottom="true"
        android:id="@+id/enter_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_red"
        android:text="下一个"
        android:textColor="@color/c_fff"
        android:layout_margin="@dimen/dp_20"
        android:padding="@dimen/dp_10"
        android:layout_alignParentRight="true"
        />

    <android.support.v4.view.ViewPager
        android:layout_below="@id/return_webview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/enter_img"
        android:id="@+id/img_vp"
        android:layout_centerInParent="true"
        />

</RelativeLayout>