<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_fff"
    tools:context="com.sport.sportproject.ui.main_navigation.HuanWangActivity"
    tools:ignore="ExtraText">
    <LinearLayout
        android:background="@color/c_e34536"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal"
        >
    <ImageView
        android:padding="@dimen/dp_2"
        android:layout_width="@dimen/dp_35"
        android:layout_height="match_parent"
        android:src="@drawable/back_chat_room_pressed"
        android:id="@+id/btn_last"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="联网设置"
            android:textColor="@color/c_fff"
            />
    </LinearLayout>
    <LinearLayout
        android:padding="@dimen/dp_4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="只在WIFI环境下播放"
            android:gravity="center_vertical"
            android:textSize="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checked"
            android:gravity="right"
            android:layout_marginRight="@dimen/dp_10"

            />
    </LinearLayout>
</LinearLayout>
