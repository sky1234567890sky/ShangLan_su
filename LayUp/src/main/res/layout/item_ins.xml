<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/img_weixiao"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10" />

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_avatar"
            android:text="@string/app_name"
            android:textColor="@color/c_222"
            android:layout_toEndOf="@id/iv_avatar" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_11"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="@color/c_222"
            tools:ignore="RelativeOverlap"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_10" />

        <TextView
            android:id="@+id/tv_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_avatar"
            android:layout_toRightOf="@id/iv_avatar"
            android:text="@string/app_name"
            android:textColor="@color/c_8a8a8a"
            android:textSize="@dimen/sp_12"
            android:layout_toEndOf="@id/iv_avatar" />

        <TextView
            android:id="@+id/tv_original_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_avatar"
            android:layout_marginTop="@dimen/dp_4"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/c_222" />

        <TextView
            android:id="@+id/tv_translation_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_original_text"
            android:layout_marginTop="@dimen/dp_4"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/c_8a8a8a" />

        <ImageView
            android:id="@+id/iv_url"
            android:layout_width="@dimen/dp_170"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_height="@dimen/dp_170"
            android:layout_below="@id/tv_translation_text"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_comments_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_url"
            android:layout_marginTop="@dimen/dp_4"
            android:textColor="@color/c_8a8a8a" />
    </RelativeLayout>

</RelativeLayout>