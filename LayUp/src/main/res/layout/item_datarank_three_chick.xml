<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/line" />
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.4"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_2">

            <TextView
                android:id="@+id/item_tv_rank"
                android:layout_width="@dimen/dp_20"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:gravity="center"
                android:textAppearance="@style/text_rank_style"
                android:layout_marginStart="@dimen/dp_4" />

            <ImageView
                android:id="@+id/iv_team_logo"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginStart="@dimen/dp_6" />

            <TextView
                android:id="@+id/tv_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:textAppearance="@style/text_rank_style"
                android:layout_marginStart="@dimen/dp_10" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_tv_victory_or_defeat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.8"
            android:gravity="center"
            android:textAppearance="@style/text_rank_style" />

        <TextView
            android:id="@+id/item_tv_win_rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.8"
            android:gravity="center"
            android:textAppearance="@style/text_rank_style" />

        <TextView
            android:id="@+id/item_tv_Margin_points"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.8"
            android:gravity="center"
            android:textAppearance="@style/text_rank_style" />

        <TextView
            android:id="@+id/item_tv_integral"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.8"
            android:gravity="center"
            android:textAppearance="@style/text_rank_style" />
    </LinearLayout>

</RelativeLayout>