<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f2f2f2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_f7f7f7"
        android:padding="@dimen/dp_10">

        <ImageView
            android:id="@+id/item_iv_logo"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10" />

        <TextView
            android:id="@+id/item_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_iv_logo"
            android:textColor="@color/c_222"
            android:layout_toEndOf="@id/item_iv_logo" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/c_8a8a8a"
        android:layout_height="@dimen/dp_0_1" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_rlv"
        android:layout_width="match_parent"
        android:background="@color/c_f7f7f7"
        android:orientation="vertical"
        android:layout_height="wrap_content" />
</LinearLayout>