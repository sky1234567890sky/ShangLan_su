<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/c_e34536">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rl"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10">

                    <org.raphets.roundimageview.RoundImageView
                        android:id="@+id/headler_img_tooolbar"
                        android:layout_width="@dimen/dp_28"
                        android:layout_height="@dimen/dp_28"
                        android:scaleType="centerCrop"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/icon_reward_default_head"
                        />
                    <!--<ImageView-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_marginRight="@dimen/dp_2"-->
                        <!--android:layout_centerInParent="true"-->
                        <!--android:src="@drawable/pictures_unselected"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_marginEnd="@dimen/dp_2" />-->

                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_dajia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_toRightOf="@id/rl"
                    android:background="@drawable/search_tv_bg"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp_6"
                    android:paddingTop="@dimen/dp_6"
                    android:text="@string/dajiadouzaisou"
                    android:textColor="@color/c_e7e7e7"
                    android:textSize="@dimen/sp_13"
                    android:layout_marginEnd="@dimen/dp_18"
                    android:layout_toEndOf="@id/rl"
                    />
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/tv_title_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/c_fff"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>