<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_240"
        android:gravity="top">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/cehuaimage" />

        <TextView
            android:id="@+id/a_pure_and_loving_world_of_basketball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/A_pure_and_loving_world_of_basketball"
            android:textColor="@color/c_fff" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/a_pure_and_loving_world_of_basketball"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:src="@drawable/logo_bastball" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/a_pure_and_loving_world_of_basketball"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/tv_login_select_bg"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30"
            android:paddingTop="@dimen/dp_10"
            android:text="@string/lijilogin"
            android:textColor="@color/tv__login_text_select"
            android:textSize="@dimen/sp_15" />


        <org.raphets.roundimageview.RoundImageView
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_below="@id/a_pure_and_loving_world_of_basketball"
            android:id="@+id/login_last_headler_img"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_reward_default_head"
            />
        <TextView
            android:textSize="@dimen/dp_13"
            android:layout_below="@id/login_last_headler_img"
            android:layout_marginTop="@dimen/dp_10"
            android:textStyle="bold"
            android:id="@+id/wel_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp_20"
            android:textColor="@color/c_fff"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="用户:"
            android:visibility="gone"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry,SpUsage" />

        <TextView
            android:textStyle="italic"
            android:textSize="@dimen/dp_10"
            android:id="@+id/wel_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态:登录状态"
            android:padding="@dimen/dp_20"
            android:textColor="@color/c_fff"
            android:visibility="gone"
            />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="@color/c_e7e7e7"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_MeNotifition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:background="@color/c_fff"
            android:orientation="horizontal"
            android:padding="@dimen/dp_15">

            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:src="@drawable/more" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:text="@string/I_notice"
                android:textColor="@color/c_222"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_1"
            android:background="@color/c_e7e7e7" />

        <LinearLayout
            android:id="@+id/ll_collect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c_fff"
            android:orientation="horizontal"
            android:padding="@dimen/dp_15">

            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:src="@drawable/xing" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:text="@string/Collection_and_history"
                android:textColor="@color/c_222"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_1"
            android:background="@color/c_e7e7e7" />

        <LinearLayout
            android:id="@+id/ll_system_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c_fff"
            android:orientation="horizontal"
            android:padding="@dimen/dp_15">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_6"
                android:src="@drawable/la_ba" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_12"
                android:text="@string/system_message"
                android:textColor="@color/c_222"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rlv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_3"
            android:background="@color/c_fff"
            android:overScrollMode="never" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:background="@color/c_e7e7e7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="bottom"
        android:background="@color/c_fff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:layout_marginRight="@dimen/dp_6"
                android:src="@drawable/qian_bi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feedback"
                android:textColor="@color/c_222" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:layout_marginRight="@dimen/dp_6"
                android:src="@drawable/search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search"
                android:textColor="@color/c_222" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:layout_marginRight="@dimen/dp_6"
                android:src="@drawable/chi_lun" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting"
                android:textColor="@color/c_222" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>