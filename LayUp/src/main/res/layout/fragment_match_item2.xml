<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_40"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/left_img"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/left_img"
            android:layout_marginLeft="@dimen/dp_40"
            android:text="勇士(4)"
            android:textSize="@dimen/dp_13"
            android:id="@+id/left_tv"
            android:layout_marginBottom="@dimen/dp_10"
            />
        <ImageView
            android:layout_marginTop="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_44"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_height="@dimen/dp_44"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/right_img"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_below="@id/left_img"
            android:text="勇士(4)"
            android:textSize="@dimen/dp_13"
            android:id="@+id/right_tv"
            android:layout_marginBottom="@dimen/dp_10"
            />
        <!--中间-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contre_time_nba_match"
            android:text=""
            android:textSize="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_centerHorizontal="true"
            android:textColor="@color/c_gray"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_below="@id/contre_time_nba_match"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/c_gray"
            android:text=" —— "
            android:id="@+id/_compareto"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fs_a"
            android:text="119"
            android:textColor="@color/c_000"
            android:layout_toLeftOf="@id/_compareto"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:textSize="@dimen/dp_20"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fs_b"
            android:text="119"
            android:textColor="@color/c_000"
            android:layout_toRightOf="@id/_compareto"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:textSize="@dimen/dp_20"
            />
        <!--比赛集锦-->
        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/_compareto"
            android:layout_marginTop="@dimen/dp_20"
            android:id="@+id/match_gather"
            android:background="@drawable/btn_red"
            android:text="比赛集锦"
            android:textColor="@color/c_red"
            android:textSize="@dimen/sp_10"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EBE9E7"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        >
        <ImageView
            android:id="@+id/left_headler_bottom_img"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            />
        <TextView
            android:id="@+id/left_bottom_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/left_headler_bottom_img"
            android:textSize="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_3"
            android:textColor="@color/c_000"
            />
        <TextView
            android:id="@+id/left_bottom_fen_lan_zhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/left_headler_bottom_img"
            android:textSize="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_3"
            android:textColor="@color/c_000"
            android:layout_below="@id/left_bottom_name"
            />
        <ImageView
            android:id="@+id/right_headler_bottom_img"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/right_bottom_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_10"
            android:textColor="@color/c_000"
            android:layout_toLeftOf="@id/right_headler_bottom_img"
            android:layout_marginRight="@dimen/dp_3"
            />
        <TextView
            android:id="@+id/right_bottom_fen_lan_zhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_3"
            android:textColor="@color/c_000"
            android:layout_below="@id/left_bottom_name"
            android:layout_toLeftOf="@id/right_headler_bottom_img"
            android:layout_marginRight="@dimen/dp_3"
            />
    </RelativeLayout>

